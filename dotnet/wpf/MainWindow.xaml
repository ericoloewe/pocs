<Window x:Class="wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="1" Height="100" Width="100" Source="{StaticResource p_d}"/>
        <Image Grid.Row="2" Height="100" Width="100" Source="{StaticResource p_e}"/>
        <Image Height="100" Width="100" Source="{StaticResource c_e}"/>
        <!-- <Button Content="Exit" Grid.Row="1" FontSize="20" Click="ButtonExit_Click"/> -->
    </Grid>
</Window>
